{
  "extends": [
    "solhint:recommended"
  ],
  "rules": {
    "compiler-version": "off",
    "max-line-length": "off",
    "use-natspec": "off",
    "no-empty-blocks": "off",
    "no-global-import": "off",
    "ordering": "off",
    "reason-string": "off",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ]
  }
}
